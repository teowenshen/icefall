    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "lang_dir.py",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--lang-dir", "data/lang_bpe" 
            ]
        },
        {
            "name": "train.py",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--world-size", "1",
                "--max-duration", "200",
                "--lang-dir", "data/lang_bpe", 
                "--print-diagnostics", "True"
            ]
        }
    ]
}